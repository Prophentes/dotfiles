# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
    colors = false
    color_good =     '#ffffff'
    color_degraded = '#ffffff'
    color_bad =      '#ffffff'
    interval = 1
}

order += "weather_yahoo"
order += "spotify"
order += "sysdata"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery 0"
order += "volume_status"
order += "tztime local"

screenshot {

}

weather_yahoo {
    woeid = 2398623
    forecast_days = 1
    units = F
    forecast_include_today = true
    format = "{today} "
    format_today = " {temp} {units}° {text}"
}

spotify {
    format = " {artist} - {title}"
    color_playing = #ffffff
}

battery 0 {
    format = " %percentage"
    integer_battery_capacity = true
    threshold_type = "percentage"
    low_threshold = 10
}

sysdata {
    cache_timeout = 3
    format = " {cpu_usage}% {mem_used}GB/{mem_total}GB"
}

keyboard_layout {
    cache_timeout = 1
}

volume_status {
    button_up = 4
    button_down = 5
    button_mute = 2
}

wireless _first_ {
        format_up = " %essid"
        format_down = " offline"

}


tztime local {
        format = " %m.%d.%Y %I:%M"
}

load {
        format = "%1min"
}

disk "/" {
        format = "%avail"
}
